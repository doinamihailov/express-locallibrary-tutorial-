extends layout

block content
  h1 Book: #{book.name}

  if book_instances.length
  
    p #[strong Delete the following books instances before attempting to delete this book.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Book Instances
    
      dl
      each bookinstance in book_intances
        dt 
          a(href=bookinstance.url) #{bookinstance.title}

  else
    p Do you really want to delete this Book?
    
    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=book._id )

      button.btn.btn-primary(type='submit') Delete